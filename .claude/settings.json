{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "hooks": {
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/scripts/hooks/session-start.cjs"
          },
          {
            "type": "command",
            "command": "node .claude/scripts/hooks/start-spec-dashboard.cjs",
            "timeout": 10
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/scripts/hooks/user-prompt-submit.cjs"
          },
          {
            "type": "command",
            "command": "node .claude/scripts/hooks/user-prompt-start.cjs"
          },
          {
            "type": "command",
            "command": "node .claude/scripts/hooks/user-prompt-review.cjs"
          },
          {
            "type": "command",
            "command": "node .claude/scripts/hooks/command-mode-detect.cjs"
          },
          {
            "type": "command",
            "command": "node .claude/scripts/hooks/user-prompt-ship.cjs"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/scripts/hooks/pre-tool-use-task-enforcement.cjs"
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/scripts/hooks/pre-tool-use-bash.cjs"
          }
        ]
      },
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/scripts/hooks/pre-tool-use-file.cjs"
          },
          {
            "type": "command",
            "command": "node .claude/scripts/hooks/suggest-compact.cjs"
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/scripts/hooks/pre-tool-use-git-push.cjs"
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/scripts/hooks/pre-tool-use-dev-tip.cjs"
          }
        ]
      },
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/scripts/hooks/pre-tool-use-doc-warning.cjs"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/scripts/hooks/post-tool-use.cjs"
          }
        ]
      },
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/scripts/hooks/post-tool-use-typecheck.cjs"
          }
        ]
      },
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/scripts/hooks/post-tool-use-eslint.cjs"
          }
        ]
      },
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/scripts/hooks/post-tool-use-prettier.cjs"
          }
        ]
      },
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/scripts/hooks/post-tool-use-vitest.cjs"
          }
        ]
      },
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/scripts/hooks/post-tool-use-console-check.cjs"
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/scripts/hooks/post-tool-use-pr-created.cjs"
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/scripts/hooks/pre-compact.cjs"
          },
          {
            "type": "command",
            "command": "node .claude/scripts/hooks/compaction-tracker.cjs"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/scripts/hooks/session-end.cjs"
          },
          {
            "type": "command",
            "command": "node .claude/scripts/hooks/evaluate-session.cjs"
          }
        ]
      },
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/scripts/hooks/stop-console-check.cjs"
          }
        ]
      }
    ]
  }
}
