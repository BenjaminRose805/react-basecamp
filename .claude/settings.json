{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "hooks": {
    "SessionStart": [
      {
        "scriptPath": "hooks/session-start.cjs"
      }
    ],
    "UserPromptSubmit": [
      {
        "scriptPath": "hooks/user-prompt-start.cjs"
      },
      {
        "scriptPath": "hooks/user-prompt-review.cjs"
      },
      {
        "scriptPath": "hooks/command-mode-detect.cjs"
      },
      {
        "scriptPath": "hooks/user-prompt-ship.cjs"
      }
    ],
    "PreToolUse": [
      {
        "scriptPath": "hooks/pre-tool-use-bash.cjs",
        "matcher": "Bash"
      },
      {
        "scriptPath": "hooks/pre-tool-use-file.cjs",
        "matcher": "Edit|Write"
      },
      {
        "scriptPath": "hooks/pre-tool-use-git-push.cjs",
        "matcher": "Bash"
      }
    ],
    "PostToolUse": [
      {
        "scriptPath": "hooks/post-tool-use.cjs",
        "matcher": ""
      }
    ],
    "Stop": [
      {
        "scriptPath": "hooks/session-end.cjs"
      }
    ]
  }
}
