{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "title": "Environment Configuration",
  "description": "Configuration for /start command environment checks",
  "type": "object",
  "properties": {
    "tools": {
      "type": "object",
      "description": "Tool configuration",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "required": {
            "type": "boolean",
            "description": "Whether the tool is required for the project"
          },
          "versionCommand": {
            "type": "string",
            "description": "Command to check the tool version"
          },
          "authCheck": {
            "type": "string",
            "description": "Command to verify tool authentication"
          },
          "platforms": {
            "type": "array",
            "description": "List of supported platforms for this tool",
            "items": {
              "type": "string",
              "enum": ["darwin", "linux", "win32"]
            }
          }
        },
        "additionalProperties": true
      }
    },
    "verification": {
      "type": "object",
      "description": "Build and code quality verification settings",
      "properties": {
        "lint": {
          "type": "boolean",
          "description": "Run linting checks"
        },
        "typecheck": {
          "type": "boolean",
          "description": "Run type checking"
        },
        "tests": {
          "type": "boolean",
          "description": "Run unit tests"
        },
        "build": {
          "type": "boolean",
          "description": "Run production build"
        }
      },
      "additionalProperties": true
    },
    "git": {
      "type": "object",
      "description": "Git repository settings",
      "properties": {
        "requireClean": {
          "type": "boolean",
          "description": "Require clean git working directory"
        },
        "defaultBranch": {
          "type": "string",
          "description": "Default branch name (e.g., main, master)"
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}
