{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "entry": ["src/app/**/*.{ts,tsx}", "src/components/**/*.{ts,tsx}"],
  "project": ["src/**/*.{ts,tsx}"],
  "ignore": [
    "**/*.test.{ts,tsx}",
    "**/*.spec.{ts,tsx}",
    "**/*.d.ts",
    "e2e/**/*"
  ],
  "ignoreDependencies": [
    "@types/*",
    "@testing-library/*",
    "@vitejs/*",
    "@vitest/*",
    "@playwright/*"
  ],
  "next": {
    "entry": ["src/app/**/page.tsx", "src/app/**/layout.tsx"]
  }
}
