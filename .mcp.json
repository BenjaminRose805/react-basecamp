{
  "mcpServers": {
    "cclsp": {
      "command": "npx",
      "args": ["-y", "cclsp"],
      "env": {
        "CCLSP_CONFIG_PATH": ".claude/cclsp.json"
      }
    },
    "next-devtools": {
      "command": "npx",
      "args": ["-y", "next-devtools-mcp@latest"]
    },
    "playwright": {
      "command": "npx",
      "args": ["-y", "@playwright/mcp@latest"]
    },
    "context7": {
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp"]
    },
    "shadcn": {
      "command": "npx",
      "args": ["shadcn@latest", "mcp"]
    }
  }
}
